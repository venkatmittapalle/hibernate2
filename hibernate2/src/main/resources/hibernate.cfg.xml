<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
         "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">  
 
<hibernate-configuration>  
 
<session-factory>  
 

<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521/orcl</property>  
<property name="hibernate.connection.username">venkat</property>  
<property name="hibernate.connection.password">venkat</property>  
<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>  

<property name="hbm2ddl.auto">create</property>  
<property name="dialect">org.hibernate.dialect.Oracle9Dialect</property> 
<property name="show_sql">true</property>
<property name="format_sql">true</property>

<mapping class="com.venki.hibernate.Student"/>  
<mapping class="com.venki.hibernate.Address"/>

</session-factory>  
 
</hibernate-configuration>